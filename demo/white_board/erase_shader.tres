[gd_resource type="Shader" format=2]

[resource]
code = "shader_type canvas_item;
render_mode blend_disabled;

// Erase color
uniform vec4 erase: hint_color = vec4(0.0, 0.0, 0.0, 0.0);

void fragment() {
	// Get input color
	vec4 input = texture(SCREEN_TEXTURE, SCREEN_UV);
	
	// Select mix coefficient (0 = input, 1 = erase)
	float c = texture(TEXTURE, UV).a;
	
	// Mix the input and erase based on the coefficient
	COLOR = mix(input, erase, c);
}"
